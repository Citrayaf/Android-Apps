<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f2f2f2">

    <ImageView
        android:id="@+id/slide_gambar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/manage_tambak" />

    <TextView
        android:id="@+id/slide_heading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_gambar"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:gravity="center"
        android:text="Atur Tambak"
        android:textColor="#333333"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/slide_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_heading1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:lineHeight="30dp"
        android:gravity="center"
        android:fontFamily="@font/source_sans_pro"
        android:text="Kelola tambakmu disini. Kamu bisa membuat, menyunting, dan juga menghapus tambak milikmu"
        android:textColor="#333333"
        android:textSize="20dp" />

</RelativeLayout>